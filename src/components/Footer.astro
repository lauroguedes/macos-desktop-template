---
import Social from "./Social.astro";
import twitter from "../images/twitter.png";
import github from "../images/github.png";
import youtube from "../images/youtube.png";
import linkedin from "../images/linkedin.png";
import instagram from "../images/instagram.png";
import email from "../images/email-send.png";
import cv from "../images/cv.png";
import whatsapp from "../images/whatsapp.png";
import ExternalLink from "./ExternalLink.astro";
import MenuBar from "./MenuBar.astro";
---

<footer class="absolute place-self-center bottom-3 shadow-sm">
  <MenuBar>
    <Social
      platform="twitter"
      username="leowg"
      icon={twitter}
      slot="social-links"
    />
    <Social
      platform="github"
      username="lauroguedes"
      icon={github}
      slot="social-links"
    />
    <Social
      platform="youtube"
      username="leowgweb"
      icon={youtube}
      slot="social-links"
    />
    <Social
      platform="linkedin"
      username="in/leowgweb"
      icon={linkedin}
      slot="social-links"
    />
    <Social
      platform="instagram"
      username="leowgweb"
      icon={instagram}
      slot="social-links"
    />

    <ExternalLink
      title="WhatsApp Contact"
      url="#"
      icon={whatsapp}
      slot="external-links"
    />
    <ExternalLink
      title="Contact me"
      url="mailto:laurowguedes@gmail.com"
      icon={email}
      slot="external-links"
    />
    <ExternalLink
      title="My Resume"
      url="https://bit.ly/42dYDS5"
      icon={cv}
      slot="external-links"
    />
  </MenuBar>
</footer>
